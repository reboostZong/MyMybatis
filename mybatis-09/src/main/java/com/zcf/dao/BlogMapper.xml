<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcf.dao.BlogMapper">

    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

    <insert id="insertBlog" parameterType="blog" flushCache="true">
        insert into mymybatis.blog (id, title, author, create_time, views) values (#{id}, #{title}, #{author}, #{createTime}, #{views});
    </insert>

    <sql id="Condition" >
        <if test="title != null">
            title = #{title}
        </if>
        <if test="author != null">
            and author = #{author}
        </if>
    </sql>

    <select id="getBlogByCondition" parameterType="map" resultType="blog" >
        select * from mymybatis.blog
        <where>
            <include refid="Condition"></include>
        </where>
    </select>

    <select id="getBlogChoose" parameterType="map" resultType="blog">
        select * from mymybatis.blog
        <where>
            <choose>
                <when test="title != null">
                    title =#{title}
                </when>
                <when test="author != null">
                    author = #{author}
                </when>
                <otherwise>
                    views >= #{views}
                </otherwise>
            </choose>
        </where>
    </select>

    <update id="updateBlog" parameterType="blog" >
        update mymybatis.blog
        <set>
            <if test="title != null">
                title= #{title},
            </if>
            <if test="author != null">
                author = #{author},
            </if>
            <if test="views != null">
                views = #{views}
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="getBlogForeach" parameterType="map" resultType="blog">
        select * from mymybatis.blog
        <where>
            id in
            <foreach collection="ids" item="id" index="i" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </select>

    <select id="getBlogById" parameterType="_int" resultType="blog" useCache="true">
        select * from mymybatis.blog
        <where>
            id = #{id}
        </where>
    </select>
</mapper>


